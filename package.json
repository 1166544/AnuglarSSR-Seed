{
    "name": "angular-ssr-seed",
    "version": "0.0.2",
    "license": "MIT",
    "description": "angular server side rendering integrate whith egg2",
    "author": {
        "name": "James Liauw",
        "email": "jamesliauw@163.com"
    },
    "scripts": {
        "ng": "ng",
        "client": "ng serve --proxy-conf build/proxy.conf.json --host localhost --port 8088",
        "serve": "cd app && eslint . && cd .. && cross-env NODE_ENV=local http_proxy=http://127.0.0.1:8888 egg-bin dev --cluster 2",
        "start": "egg-scripts start --daemon --ignore-stderr",
        "stop": "egg-scripts stop",
        "build": "run-s build:client build:aot build:server",
        "build:client": "ng build -prod --build-optimizer --app 0",
        "build:aot": "ng build --aot --app 1",
        "build:server": "webpack -p",
        "test": "ng test",
        "lint": "ng lint",
        "e2e": "ng e2e",
        "test-express": "node app/ngSources/server.js",
        "test-egg": "npm run test-local",
        "test-local": "egg-bin test",
        "cov": "egg-bin cov",
        "lint-egg": "eslint .",
        "ci": "npm run lint && npm run cov",
        "autod": "autod"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^5.2.10",
        "@angular/cdk": "^5.2.5",
        "@angular/common": "^5.2.10",
        "@angular/compiler": "^5.2.10",
        "@angular/compiler-cli": "^5.2.10",
        "@angular/core": "^5.2.10",
        "@angular/forms": "^5.2.10",
        "@angular/http": "^5.2.10",
        "@angular/material": "^5.2.5",
        "@angular/platform-browser": "^5.2.10",
        "@angular/platform-browser-dynamic": "^5.2.10",
        "@angular/platform-server": "^5.2.10",
        "@angular/router": "^5.2.10",
        "@angular/service-worker": "^5.2.10",
        "@ngx-loading-bar/http-client": "^1.6.0",
        "core-js": "^2.5.5",
        "cross-env": "^5.1.5",
        "egg": "^2.0.0",
        "egg-scripts": "^2.6.0",
        "egg-view-nunjucks": "^2.1.4",
        "express": "^4.16.3",
        "hammerjs": "^2.0.8",
        "moment": "^2.19.2",
        "npm-run-all": "^4.1.2",
        "rxjs": "^5.5.10",
        "web-animations-js": "^2.3.1",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular/cli": "1.7.4",
        "@angular/language-service": "^5.2.10",
        "@types/jasmine": "~2.8.6",
        "@types/jasminewd2": "~2.0.3",
        "@types/node": "~9.6.5",
        "autod": "^3.0.1",
        "autod-egg": "^1.0.0",
        "babel-eslint": "^8.2.3",
        "cheerio": "^1.0.0-rc.2",
        "codelyzer": "~4.2.1",
        "egg-bin": "^4.3.5",
        "egg-mock": "^3.13.1",
        "eslint": "^4.12.0",
        "eslint-config-egg": "^5.1.1",
        "jasmine": "~3.1.0",
        "jasmine-core": "~3.1.0",
        "jasmine-spec-reporter": "~4.2.1",
        "karma": "~2.0.0",
        "karma-chrome-launcher": "~2.2.0",
        "karma-coverage-istanbul-reporter": "^1.4.2",
        "karma-jasmine": "~1.1.1",
        "karma-jasmine-html-reporter": "^1.0.0",
        "protractor": "~5.3.1",
        "ts-loader": "^3.5.0",
        "ts-node": "~6.0.0",
        "tslint": "~5.9.1",
        "typescript": "~2.6.2",
        "webpack-node-externals": "^1.7.2"
    },
    "engines": {
        "node": ">=8.9.0"
    }
}
